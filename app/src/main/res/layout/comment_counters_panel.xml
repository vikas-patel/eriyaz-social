<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/intrinsic_padding"
    android:layout_marginRight="@dimen/intrinsic_padding"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/rewardContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/admin_title_text_view"
                android:text="@string/admin_text"
                android:visibility="gone"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rewardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/intrinsic_padding"
                android:paddingRight="@dimen/intrinsic_padding"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Text1"
                android:textColor="@color/default_link" />
            <Spinner
                android:id="@+id/rewardSpinner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_intrinsic_padding"
                android:paddingRight="@dimen/small_intrinsic_padding"
                android:entries="@array/reward_arrays" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/userRewardContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_intrinsic_padding"
            android:paddingBottom="@dimen/small_intrinsic_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_reward_text_view"
                android:text="@string/user_text"
                android:textStyle="bold"
                android:visibility="gone"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rewardUserTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/intrinsic_padding"
                android:paddingLeft="@dimen/intrinsic_padding"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Text1"
                android:textColor="@color/default_link" />

            <Spinner
                android:id="@+id/rewardUserSpinner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_intrinsic_padding"
                android:paddingRight="@dimen/small_intrinsic_padding"
                android:entries="@array/user_reward_points" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/likesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_intrinsic_padding"
            android:paddingBottom="@dimen/small_intrinsic_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likesImageView"
                app:srcCompat="@drawable/ic_like"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/intrinsic_padding"
                android:paddingLeft="@dimen/intrinsic_padding"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/likeCounterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Second.Light" />

        </LinearLayout>

</LinearLayout>