<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <LinearLayout
        android:id="@+id/rewardContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/intrinsic_padding"
        android:paddingBottom="@dimen/intrinsic_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rewardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/large_intrinsic_padding"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/default_link" />
        <Spinner
            android:id="@+id/rewardSpinner"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/large_intrinsic_padding"
            android:entries="@array/reward_arrays" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/likesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/intrinsic_padding"
        android:paddingBottom="@dimen/intrinsic_padding"
        android:paddingRight="@dimen/large_intrinsic_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/likesImageView"
            app:srcCompat="@drawable/ic_like"
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/intrinsic_padding"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/likeCounterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Second.Light" />

    </LinearLayout>

</LinearLayout>