    <com.xw.repo.BubbleSeekBar
        android:id="@+id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:bsb_max="20"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/primary_light"
        app:bsb_second_track_size="5dp"
        app:bsb_section_count="4"
        app:bsb_section_text_color="@color/primary_dark"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_section_text_size="10dp"
        app:bsb_seek_by_section="false"
        app:bsb_show_section_mark="true"
        app:bsb_show_thumb_text="true"
        app:bsb_thumb_radius="8dp"
        app:bsb_touch_to_seek="true"
        app:bsb_track_color="@color/transparentColor" />

