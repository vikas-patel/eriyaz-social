<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/large_intrinsic_padding">

    <com.eriyaz.social.views.CircularImageView
        android:id="@+id/avatarImageView"
        android:layout_width="@dimen/notification_list_avatar_height"
        android:layout_height="@dimen/notification_list_avatar_height"
        android:src="@drawable/ic_stub"
        app:shadow="false"
        app:border="true"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/avatarImageView"
        android:paddingLeft="@dimen/large_intrinsic_padding"
        android:layout_toEndOf="@+id/avatarImageView"
        android:paddingStart="@dimen/large_intrinsic_padding" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_below="@+id/text"
        android:text="day ago"
        android:paddingTop="@dimen/small_intrinsic_padding"
        android:paddingLeft="@dimen/large_intrinsic_padding"
        android:textAppearance="@style/TextAppearance.Second.Light"
        android:paddingStart="@dimen/large_intrinsic_padding" />


</RelativeLayout>