<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mediaplayer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="3dp"
        android:transitionName="open_mediaplayer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/intrinsic_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/file_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/intrinsic_padding"
                android:layout_marginLeft="@dimen/intrinsic_padding"
                android:layout_marginTop="@dimen/intrinsic_padding"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp"
                android:layout_marginStart="@dimen/intrinsic_padding" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/current_progress_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/intrinsic_padding" />
                <TextView
                    android:id="@+id/txtPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/primary"/>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/fab_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/large_intrinsic_padding"
                    android:layout_marginTop="@dimen/small_intrinsic_padding"
                    android:layout_below="@+id/txtPercentage"
                    android:src="@drawable/ic_media_play"
                    app:fab_colorNormal="@color/primary"
                    app:fab_colorPressed="@color/primary"
                    app:fab_shadow="false" />


                <TextView
                    android:id="@+id/file_length_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/intrinsic_padding"
                    android:layout_marginEnd="@dimen/intrinsic_padding" />
                <include
                    android:id="@+id/seekbarContainer"
                    layout="@layout/seekbar_container"
                    android:layout_marginTop="@dimen/large_intrinsic_padding"
                    android:layout_marginBottom="@dimen/large_intrinsic_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fab_play" />

                <TextView
                    android:id="@+id/rateMeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekbarContainer"
                    android:layout_toLeftOf="@id/upArrowImageView"
                    android:text="Rate"
                    android:textSize="21sp"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.Highlight"
                    android:layout_toStartOf="@id/upArrowImageView" />
                <ImageView
                    android:id="@+id/upArrowImageView"
                    app:srcCompat="@drawable/ic_arrow_upward_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

                <Button android:id="@+id/closeButton"
                    android:text="close"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_below="@+id/rateMeLabel"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>