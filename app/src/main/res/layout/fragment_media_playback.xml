<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/intrinsic_padding"
            android:orientation="vertical">
            <TextView
                android:id="@+id/file_name_text_view"
                android:layout_marginBottom="@dimen/small_intrinsic_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18sp" />
            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/exoPlayerView"
                android:layout_width="match_parent"
                app:controller_layout_id="@layout/custom_playback_control"
                app:show_timeout="0"
                android:layout_marginBottom="@dimen/large_intrinsic_padding"
                app:fastforward_increment="5000"
                app:rewind_increment="5000"
                android:layout_height="80dp"/>
            <TextView
                android:text="Rating:"
                android:textAppearance="@style/TextAppearance.Subhead"
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <include
                android:id="@+id/seekbarContainer"
                layout="@layout/seekbar_container"
                android:layout_marginTop="@dimen/intrinsic_padding"
                android:layout_marginBottom="@dimen/large_intrinsic_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/earnExtraTextView"
                android:paddingTop="@dimen/intrinsic_padding"
                android:paddingBottom="@dimen/intrinsic_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textAlignment="center"
                android:text="You can earn 1 extra point by giving 'detailed feedback'."
                android:textAppearance="@style/TextAppearance.Subhead"
                android:textColor="@color/google_button_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:id="@+id/detailedFeedbackLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="@dimen/intrinsic_padding"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/mistakesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Comment..."
                        android:lines="2"
                        android:gravity="start"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="textMultiLine" />

                    <Button
                        android:id="@+id/mistakeTapButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:text="Tap For Timestamp" />
                    <TextView
                        android:text="Tune Match %"
                        android:textAppearance="@style/TextAppearance.Subhead"
                        android:id="@+id/melodyPercentageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0" />
                    <RadioGroup
                        android:id="@+id/melodyPercRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <RadioButton
                            android:id="@+id/firstBtnMelodyId"
                            android:text="50%"
                            android:layout_width="60dp"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/secondBtnMelodyId"
                            android:layout_marginLeft="-8dp"
                            android:text="70%"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/thirdBtnId"
                            android:layout_marginLeft="-8dp"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:text="80%"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/fourthBtnId"
                            android:layout_marginLeft="-8dp"
                            android:layout_gravity="center"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:text="90%"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/fifthBtnId"
                            android:layout_marginLeft="-8dp"
                            android:layout_gravity="center"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:text="99%"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                    <TextView
                        android:text="Voice Quality"
                        android:paddingTop="@dimen/intrinsic_padding"
                        android:textAppearance="@style/TextAppearance.Subhead"
                        android:id="@+id/voiceQualityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioGroup
                        android:id="@+id/voiceQualityRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <RadioButton
                            android:id="@+id/averageBtnId"
                            android:text="Average"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/goodBtnId"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:text="Good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/excellentBtnId"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:text="Excellent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                    <TextView
                        android:text="Problems if any:"
                        android:paddingTop="@dimen/intrinsic_padding"
                        android:textAppearance="@style/TextAppearance.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        <CheckBox
                            android:id="@+id/harkateCheckboxId"
                            android:layout_marginLeft="-20dp"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Harkat problem" />
                        <CheckBox
                            android:id="@+id/pronounciationCheckboxId"
                            android:layout_marginLeft="-20dp"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Pronounciation Distracting" />
                        <CheckBox
                            android:id="@+id/highPitchCheckboxId"
                            android:layout_marginLeft="-20dp"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Bad at High Pitch" />
                        <CheckBox
                            android:id="@+id/noFeelCheckboxId"
                            android:layout_marginLeft="-20dp"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Feel Missing" />
                        </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/rateMeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailedFeedbackLayout"
                    android:layout_toLeftOf="@id/upArrowImageView"
                    android:layout_marginTop="@dimen/intrinsic_padding"
                    android:text="Rate"
                    android:textSize="21sp"
                    android:textColor="@color/highlight_text"
                    android:gravity="end"
                    android:layout_toStartOf="@id/upArrowImageView" />
                <ImageView
                    android:id="@+id/upArrowImageView"
                    app:srcCompat="@drawable/ic_arrow_upward_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_above="@id/closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/large_intrinsic_padding"
                    android:layout_alignParentEnd="true" />
                <Button
                    android:id="@+id/moreTextView"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBaseline="@id/closeButton"
                    android:visibility="gone"
                    android:text="Detailed Feedback" />
                <Button android:id="@+id/submitButton"
                    android:layout_below="@id/detailedFeedbackLayout"
                    android:text="submit"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:visibility="gone"
                    android:layout_toLeftOf="@id/closeButton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <Button android:id="@+id/closeButton"
                    android:layout_below="@id/rateMeLabel"
                    android:text="close"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

</ScrollView>