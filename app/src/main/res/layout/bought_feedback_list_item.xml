<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/intrinsic_padding">

    <com.eriyaz.social.views.CircularImageView
        android:id="@+id/avatarImageView"
        android:layout_width="@dimen/bought_feedback_list_avatar_height"
        android:layout_height="@dimen/bought_feedback_list_avatar_height"
        android:paddingRight="@dimen/small_intrinsic_padding"
        android:src="@drawable/ic_stub"
        app:shadow="false"
        app:border="true"
        app:border_width="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingLeft="@dimen/small_intrinsic_padding"
        android:paddingRight="@dimen/small_intrinsic_padding"
        android:textAppearance="@style/TextAppearance.Highlight"
        android:text="POST" />

    <TextView
        android:id="@+id/paymentStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingLeft="@dimen/small_intrinsic_padding"
        android:paddingRight="@dimen/small_intrinsic_padding"
        android:text="" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:text="" />

    <Button
        android:id="@+id/toggle_resolved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>